<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="vertical"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/row_album_logo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/psy1" />
    <ImageView
        android:id="@+id/movable_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/movable_item" />
    <TextView
        android:id="@+id/row_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/row_album_logo"
        android:layout_toRightOf="@+id/row_album_logo"
        android:text="Under Cover of Darkness"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/row_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/row_album_logo"
        android:layout_toRightOf="@+id/row_album_logo"
        android:alpha="0.8"
        android:text="The Strokes"
        android:textColor="#ff616161"
        android:textSize="12sp" />
</RelativeLayout>